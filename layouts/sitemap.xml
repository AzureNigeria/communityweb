{{ printf "<?xml version=\"1.0\" encoding=\"utf-8\"?>" | safeHTML }}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {{ $pages := slice .Site.Home }}
  {{ range .Site.RegularPages }}
    {{ $pages = $pages | append . }}
  {{ end }}
  {{ range $pages }}
    <url>
      <loc>{{ .Permalink }}</loc>
      {{ with .Lastmod }}
        <lastmod>{{ .Format "2006-01-02T15:04:05-07:00" }}</lastmod>
      {{ end }}
      <changefreq>{{ .Params.changefreq | default "weekly" }}</changefreq>
      <priority>{{ .Params.priority | default "0.6" }}</priority>
    </url>
  {{ end }}
</urlset>
